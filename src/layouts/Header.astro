---
import { LT_SETTINGS } from "../data-list";
const { HEADER } = LT_SETTINGS;
---

<script>
  const headerElement = document.querySelector("#header-item");

  const headerSticky = "header-sticky";

  window.addEventListener("scroll", () => {
    const currentScroll = window.pageYOffset;

    if (currentScroll > 93) {
      headerElement.classList.add(headerSticky);
    } else {
      headerElement.classList.remove(headerSticky);
    }
  });
</script>

<header id="header-item" class="header-absolute">
  <div class="img-logo">
    <a href="/" rel="noreferrer"
      ><img
        src={HEADER?.logo?.imageUrl}
        alt={HEADER?.logo?.imageAlt}
        width="200"
        height="100"
      /></a
    >
  </div>
  <div class="item-menu">
    <ul>
      {
        HEADER.navbar.map((item, index) => (
          <li key={index}>
            <a href={item.value}>{item.label}</a>
          </li>
        ))
      }
    </ul>
  </div>
</header>

<style lang="scss">
  //MOBILE AND TABLET
  .header-absolute {
    width: 100%;
    height: auto;
    background-color: #2b2b2b;
    padding: 1rem;

    .img-logo {
      display: flex;
      justify-content: space-between;
      align-items: center;

      img {
        width: 3em;
        height: auto;
        object-fit: contain;
      }
    }

    .item-menu {
      display: none;
    }
  }

  //DESKTOP
  @media (min-width: 920px) {
    .header-absolute {
      background-color: transparent;
      position: absolute;
      top: 0;
      z-index: 700;
      display: flex;
      justify-content: space-between;
      padding: 1rem 3rem;
      width: 100%;
      max-width: 1530px;
      margin: auto;

      .img-logo {
        display: initial;

        img {
          width: 4em;
          height: auto;
          object-fit: contain;
        }

        .item-menu-button {
          display: none;
        }
      }

      .item-menu {
        display: flex;
        justify-content: end;

        ul {
          list-style: none;
          padding: 0;
          display: flex;
          align-items: center;
          gap: 1em;

          li a {
            text-decoration: none;
            color: #fff;
          }

          li .anchor-icon {
            display: flex;
            place-items: center;
            gap: 0.2em;
            padding: 0.7em 1.2em;
            text-align: center;
            border-radius: 7em;
            border: none;
            font-weight: 600;
            cursor: pointer;
            background-color: #09757a;
          }
        }
      }
    }
  }

  .header-absolute.header-sticky {
    position: fixed;
    z-index: 700;
    background-color: #2b2b2b;
    padding: 1em;
    backdrop-filter: blur(10px);
    animation: slideDown 0.35s ease-out;
    height: 8%;

    .img-logo {
      display: flex;
      align-items: center;
      img {
        width: 2em;
        height: auto;
        object-fit: contain;
        margin: 0;
      }
    }
  }

  @keyframes slideDown {
    from {
      transform: translateY(-100%);
    }
    to {
      transform: translateY(0);
    }
  }
</style>
