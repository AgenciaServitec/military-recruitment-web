---
import { ViewTransitions } from "astro:transitions";
import Footer from "./Footer.astro";
import Header from "./Header.astro";
import { ButtonFloating } from "../components";
import { LT_SETTINGS } from "../data-list";

interface Props {
  title?: string;
  googleTag?: boolean;
}

const { PROJECT } = LT_SETTINGS;

const { title = PROJECT.name, googleTag } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />

    <meta name="description" content={PROJECT.slogan} />
    <meta name="keywords" content={PROJECT.keywords} />

    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="./favicon.webp" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Google tag (gtag.js) -->
    <script
      async
      src="https://www.googletagmanager.com/gtag/js?id=AW-16646516021"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "AW-16646516021");
    </script>

    {googleTag && (
      //Event snippet for Vista de p√°gina conversion page
    <script>
      gtag("event", "conversion", {
        send_to: "AW-16646516021/ChjVCIGNhsYZELXa1oE-",
      });
    </script>)}
    
  </head>
  <body>
    <div class="general-wrapper">
      <Header />
      <div class="main">
        <slot />
      </div>
      <ButtonFloating />
      <Footer />
    </div>
    <style is:global lang="scss">
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html {
        font-family: system-ui, sans-serif;
        // background: rgb(5, 5, 5);
        background: #fff;
        color: #fff;
      }

      body {
        margin: 0;
        font-size: 16px;
        overflow-x: hidden;
      }

      .general-wrapper {
        max-width: 1530px;
        margin: auto;
        position: relative;
        // background: #13151a;
        background: #fff;
      }

      .main {
        width: 100%;
        height: auto;
      }

      .color {
        &__primary {
          color: #fff000;
        }

        &__secondary {
          color: #0c0c0ccc;
        }

        &__white {
          color: #fff;
        }

        &__black {
          color: #000;
        }
      }
    </style>
  </body><!--<GLOBAL STYLES>-->
</html>
