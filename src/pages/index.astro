---
import { BaseLayout } from "../layouts";
import { LT_SETTINGS } from "../data-list";
import { SectionWrapper, CarouselMain } from "../components";
import ApplySection from "../components/home/ApplySection.astro";
import Benefits from "../components/home/Benefits.astro";
import Requirements from "../components/home/Requirements.astro";

const { BODY } = LT_SETTINGS;
---

<BaseLayout>
  <main>
    <div class="banner-wrapper" id="/">
      {
        BODY.PRINCIPAL_SECTION.type === "banner"
          ? BODY.PRINCIPAL_SECTION?.banner && (
              <img
                src={BODY.PRINCIPAL_SECTION.banner.bannerImgUrl}
                alt={BODY.PRINCIPAL_SECTION.banner.bannerImgAlt}
                width="500"
                height="300"
              />
            )
          : BODY.PRINCIPAL_SECTION?.carousel && (
              <CarouselMain images={BODY.PRINCIPAL_SECTION?.carousel.images} />
            )
      }
      <div class="text">
        <h1>SERVICIO DE RECLUTAMIENTO MILITAR</h1>
        <p>
          Únete al servicio militar y fortalece el futuro del Perú. Sirve a tu
          país, marca la diferencia.
        </p>
        <button>¡postúlate aquí!</button>
      </div>
      <div class="banner-bg"></div>
    </div>

    <SectionWrapper>
      <Benefits />
    </SectionWrapper>

    <SectionWrapper>
      <Requirements />
    </SectionWrapper>

    <SectionWrapper>
      <ApplySection />
    </SectionWrapper>

    <!--// {BODY.PRODUCTS.title && <ProductsSection data={BODY.PRODUCTS} />}-->

    <!--<Services title={BODY.SERVICES?.title} list={BODY.SERVICES?.list} />-->
  </main>
</BaseLayout>

<style lang="scss">
  //MOBILE AND TABLET
  main {
    .banner-wrapper {
      display: flex;
      align-items: center;
      justify-content: start;
      position: relative;
      width: 100%;
      height: 100%;

      img {
        width: 100%;
        height: auto;
        z-index: 100;
      }

      .quote-wrapper {
        padding: 2em 0 0 0;

        a {
          text-decoration: auto;
        }
      }
    }
  }

  //DESKTOP
  @media (min-width: 920px) {
    main {
      display: flex;
      flex-direction: column;
      gap: 3em;

      .banner-wrapper {
        img {
          width: 100%;
          height: 90vh;
        }

        .text {
          font-size: 1.8em;
          position: absolute;
          color: white;
          z-index: 800;
          display: flex;
          flex-direction: column;
          flex-wrap: wrap;
          width: 75%;
          gap: 2em;
          margin: 2em;
          padding-top: 4em;

          p {
            font-weight: 500;
          }

          button {
            padding: 0.7em;
            text-transform: uppercase;
            font-size: 0.8em;
            font-weight: 600;
            background: green;
            color: white;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            width: 30%;
          }
        }

        .banner-bg {
          position: absolute;
          top: 0;
          left: 0;
          right: 0;
          bottom: 0;
          background: linear-gradient(
              180deg,
              rgba(0, 0, 0, 0.640494) 0%,
              black 0%,
              rgba(255, 255, 255, 0) 57%
            ),
            linear-gradient(
              0deg,
              rgba(0, 0, 0, 0.640494) 0%,
              black 0%,
              rgba(255, 255, 255, 0) 42%
            );
          z-index: 500;
          width: 100%;
          height: 100%;
        }
      }
    }
  }
</style>
