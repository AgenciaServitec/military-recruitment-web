---
import { LT_BODY } from "../../data-list/LT_BODY";
const { POSTULATION } = LT_BODY;
---

<span class="apply" id="apply-button">
  <button class="text-button">{POSTULATION.title}</button>
</span>

<script>
  const applyMilitaryService = () =>
    window.open(
      "https://korekenke.mil.pe/military-service-recruitment/new",
      "_blank",
    );

  const applyButtonElement = document.querySelector("#apply-button");

  applyButtonElement.addEventListener("click", () => applyMilitaryService());
</script>

<style lang="scss">
  .apply {
    display: flex;
    justify-content: center;
    button {
      padding: 2em;
      text-transform: uppercase;
      font-size: 0.8rem;
      font-weight: 800;
      background: green;
      color: white;
      border: none;
      border-radius: 50px;
      cursor: pointer;
    }
  }
  @media (min-width: 920px) {
    .apply {
      button {
        font-size: 1.2rem;
      }
    }
  }
</style>
