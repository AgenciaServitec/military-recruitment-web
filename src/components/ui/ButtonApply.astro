---
import { LT_BODY } from "../../data-list/LT_BODY";
const { POSTULATION } = LT_BODY;
---

<span class="apply">
  <a href="#form-recruitment" class="text-button">{POSTULATION.title}</a>
</span>

<style lang="scss">
  .apply {
    display: flex;
    justify-content: center;
    a {
      padding: 2em;
      text-transform: uppercase;
      font-size: 0.8rem;
      font-weight: 800;
      background: green;
      color: white;
      border: none;
      border-radius: 50px;
      cursor: pointer;
      text-decoration: none;
    }
  }
  @media (min-width: 920px) {
    .apply {
      a {
        font-size: 1.2rem;
      }
    }
  }
</style>
