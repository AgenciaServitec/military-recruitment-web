---
import { isEmpty } from "lodash-es";

const { name, imagePath, imageAlt } = Astro.props;
---

<article class="product">
  <a href="/contact">
    <div class="product__img">
      <img src={imagePath} alt={imageAlt} aria-label="Producto"/>
    </div>
    {
      !isEmpty(name) && (
        <div class="product__text">
          <h3>{name}</h3>
        </div>
      )
    }
  </a>
</article>

<style lang="scss">
  .product {
    width: 100%;
    height: auto;
    text-transform: uppercase;
    font-weight: 700;
    position: relative;
    padding: 0.2rem;
    border-radius: 7px;
    display: flex;
    flex-direction: column;
    gap: 0.85rem;

    a {
      text-decoration: none;
      text-align: center;
      color: #000;
      display: flex;
      flex-direction: column;
      gap: 0.5em;
    }

    &__img {
      width: 100%;
      height: auto;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }

    &__text {
      padding: 0.5em;
    }
  }
</style>
