---
import { Astro } from "astro/env";
import { isEmpty } from "lodash-es";

const {
  title = undefined,
  description = undefined,
  imgUrl = undefined,
  imgAlt = undefined,
} = Astro.props;
---

<section class="about-us">
  <div class="about-us__img">
    {
      !isEmpty(imgUrl) && (
        <img src={imgUrl} alt={imgAlt} width="150" height="100" />
      )
    }
  </div>
  <div class="about-us__text">
    {!isEmpty(title) && <h2 class="about-us__text-title">{title}</h2>}
    {
      !isEmpty(description) && (
        <p class="about-us__text-description">{description}</p>
      )
    }
  </div>
</section>

<style lang="scss">
  .about-us {
    width: 100%;
    display: flex;
    justify-content: center;
    flex-wrap: wrap-reverse;
    gap: 2rem;
    padding: 0 7rem;
    @media (max-width: 1200px) {
      padding: 0 2rem;
    }

    &__img {
      max-width: 500px;
      height: 280px;

      img {
        width: 100%;
        height: 100%;
        border-radius: 15px;
      }
    }

    &__text {
      width: 35%;

      &-title {
        font-size: 3.5rem;
        line-height: 1;
        text-transform: uppercase;
        font-style: italic;
        color: #000;
        margin-bottom: 1rem;
        @media (max-width: 576px) {
          font-size: 1.5rem;
        }
      }

      &-description {
        text-align: left;
        font-size: 1.2rem;
        color: #000;
      }

      @media (max-width: 1024px) {
        width: 100%;
        &-title {
          font-size: 3rem;
          text-align: center;
        }
        &-description {
          text-align: center;
          font-size: 1.2rem;
        }
      }
    }
  }
</style>
